rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper to check if user is an admin
    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // User profiles: users can only read/write their own data
    match /users/{userId} {
      allow read, write: if (request.auth != null && request.auth.uid == userId) || isAdmin();
    }
    
    // Admin collection: only used for verification
    match /admins/{adminId} {
      allow read: if request.auth != null && (request.auth.uid == adminId || isAdmin());
      allow write: if false; 
    }
    
    // Products and Tags: everyone can read, admin can write
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /tags/{tagId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Orders: users can create/read their own, admin can read/write all
    match /orders/{orderId} {
      allow create: if request.auth != null;
      allow read: if (request.auth != null && resource.data.userId == request.auth.uid) || isAdmin();
      allow update, delete: if isAdmin();
    }
    
    // Feedback: anyone can create (authenticated or not depends on UI, but code says anonymous fallback), admin can read
    match /feedback/{feedbackId} {
      allow create: if true;
      allow read: if isAdmin();
    }
  }
}
